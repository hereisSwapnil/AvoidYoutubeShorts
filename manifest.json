{
  "manifest_version": 3,
  "name": "Avoid YT Shorts - Enhanced",
  "version": "2.0.0",
  "description": "Enhanced YouTube Shorts blocker with statistics, pause/resume functionality, and beautiful UI. Stay focused on meaningful content!",
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "notifications",
    "scripting"
  ],
  "host_permissions": [
    "https://www.youtube.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "css": ["script.css"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["script.css"],
      "matches": ["https://www.youtube.com/*"]
    }
  ],
  "icons": {
    "16": "icons/icon.png",
    "32": "icons/icon.png",
    "48": "icons/icon.png",
    "128": "icons/icon.png"
  },
  "action": {
    "default_title": "Avoid YT Shorts - Enhanced",
    "default_popup": "popup.html"
  },
  "options_page": "options.html",
  "background": {
    "service_worker": "background.js"
  }
}
